<Window x:Class="ApplicantManagementApp.Views.EnrolleeWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ApplicantManagementApp.Views"
        mc:Ignorable="d"
        Title="Вы вошли как Абитуриент" Height="1080" Width="1920" WindowState="Maximized">
    <Grid>
        <StackPanel>
            <TextBlock Text="Добро пожаловать!" FontSize="36" Margin="30 30 0 0" />
            <Button x:Name="ApplyButton" Content="Подать заявку на специальность" FontSize="36" Margin="0 60 0 0" Width="1136" Click="ApplyButton_Click" />
            <Button x:Name="ExamButton" Content="Подать заявку на вступительные экзамены" FontSize="36" Margin="0 60 0 0" Width="1136" Click="ExamButton_Click" />
            <Button x:Name="RatingButton" Content="Просмотреть рейтинг специальности" FontSize="36" Margin="0 60 0 0" Width="1136" Click="RatingButton_Click" />
            <Button x:Name="BackButton" Content="Назад" FontSize="36" Margin="0 500 0 0" Width="450" Click="BackButton_Click" />
            
        </StackPanel>
    </Grid>
</Window>
