<Window x:Class="ApplicantManagementApp.Views.ListEnrolleeWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ApplicantManagementApp.Views"
        mc:Ignorable="d"
        Title="Список абитуриентов" Height="1080" Width="1920" WindowState="Maximized">
    <Grid>
        <StackPanel>
            <DataGrid Height="730" x:Name="EnrolleeGrid" AutoGenerateColumns="False">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Фамилия" FontSize="19" Binding="{Binding Path= surnameUser}" />
                    <DataGridTextColumn Header="Имя" FontSize="19" Binding="{Binding Path= nameUser}" />
                    <DataGridTextColumn Header="Отчество" FontSize="19" Binding="{Binding Path= patronimicUser}" />
                    <DataGridTextColumn Header="Телефон" FontSize="19" Binding="{Binding Path= telephoneNum}" />
                    <DataGridTextColumn Header="Номер паспорта" FontSize="19" Binding="{Binding Path= passportNum}" />
                </DataGrid.Columns>
            </DataGrid>
            <Button x:Name="BackButton" Content="Назад" FontSize="24" Margin="0 200 0 0" Width="1136" Click="BackButton_Click" />
        </StackPanel>
    </Grid>
</Window>
